{
  "name": "backend-test-tools",
  "version": "1.0.6",
  "description": "Node test tools",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "test": "NODE_ENV=test nyc --reporter=none mocha test/hooks.ts \"src/**/*.test.ts\"",
    "build": "rimraf dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json && npx babel src --out-dir dist --source-maps --extensions \".ts\" --ignore \"**/*.test.ts\" --copy-files --no-copy-ignored",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prakashmahendran/backend-test-tools.git"
  },
  "author": "Ram",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prakashmahendran/backend-test-tools/issues"
  },
  "homepage": "https://github.com/prakashmahendran/backend-test-tools#readme",
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.0",
    "@babel/plugin-transform-class-properties": "^7.25.9",
    "@babel/plugin-transform-runtime": "^7.25.9",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@babel/register": "^7.25.9",
    "@eslint/js": "^9.17.0",
    "@faker-js/faker": "^9.3.0",
    "@types/chai": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.2",
    "@types/node-forge": "^1.3.11",
    "@types/sinon": "^17.0.3",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.12.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "babel-plugin-istanbul": "^7.0.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-plugin-tsconfig-paths": "^1.0.3",
    "core-js": "^3.39.0",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "mocha": "^11.0.1",
    "nyc": "^17.1.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.ts": "eslint"
  },
  "peerDependencies": {
    "node-server-engine": "^1.1.5"
  },
  "dependencies": {
    "@babel/runtime": "^7.26.0",
    "jsonwebtoken": "^9.0.2",
    "node-forge": "^1.3.1",
    "rfdc": "^1.4.1",
    "sinon": "^19.0.2",
    "supertest": "^7.0.0"
  }
}
